{
  "name": "react-component-generator",
  "displayName": "React component generator",
  "description": "Generates a basic react component",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.79.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GradooC/react-component-generator"
  },
  "categories": [
    "Other",
    "Snippets"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "react-component-generator.createComponent",
        "title": "Create React Component"
      }
    ],
    "menus": {
        "commandPalette": [
          {
            "command": "react-component-generator.createComponent",
            "when": "explorerResourceIsFolder"
          }
        ],
        "explorer/context": [
          {
            "command": "react-component-generator.createComponent",
            "when": "explorerResourceIsFolder",
            "group": "EditorConfig@1"
          }
        ]
      },
      "configuration": {
        "title": "Create React Component",
        "properties": {
            "createReactComponent.index.snippet": {
                "type": "string",
                "editPresentation": "multilineText",
                "default": "export * from './{{fileName}}';\n",
                "description": "Content for the index file"
            },
            "createReactComponent.tsx.snippet": {
                "type": "string",
                "editPresentation": "multilineText",
                "default": "import React from 'react';\nimport styles from './{{fileName}}.module.css';\n\nexport type {{componentName}}Props = {};\n\nexport const {{componentName}} = ({}: {{componentName}}Props) => {\n\treturn <div className={styles.root}>{{componentName}}</div>;\n};\n",
                "description": "Content for the tsx file"
            },
            "createReactComponent.styles.snippet": {
                "type": "string",
                "editPresentation": "multilineText",
                "default": ".root {}\n",
                "description": "Content for the styles file"
            }
        }
      }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.79.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "ts-loader": "^9.4.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1",
    "@vscode/test-electron": "^2.3.2"
  }
}
